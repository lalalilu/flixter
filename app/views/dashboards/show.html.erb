<br>

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>What I'm Learning</h1>
  <% current_user.enrolled_courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br>
    <div class="image">
      <%= image_tag course.image %>
    </div>
    <br>
    <div class="col-xs-12 col-sm-8">
      <%= course.description %>
    </div>
    <div class="col-xs-12 col-sm-4 text-center">
      <%= link_to 'More Info...', course_path(course), class: 'btn btn-primary btn-lg' %>
    </div>
    <hr class="col-xs-8 col-xs-offset-2">
    <br class="clr">
  <% end %>


  <h1>What I'm Teaching</h1>
  <% current_user.courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, instructor_course_path(course) %>
    </h3>
    <br>
    <div class="image">
      <%= image_tag course.image %>
    </div>
    <br>
    <div class="col-xs-12 col-sm-8">
      <%= course.description %>
    </div>
    <div class="col-xs-12 col-sm-4 text-center">
      <%= link_to 'More Info...', course_path(course), class: 'btn btn-primary btn-lg' %>
    </div>
    <hr class="col-xs-8 col-xs-offset-2">
    <br class="clr">
  <% end %>
</div>
